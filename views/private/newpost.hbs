    <div class="new-listing">
    <form class="new-post" action="/newpost" method="post">
        <h2>New Post</h2>
        <label for="title">Title</label>
        <input 
        type="text"
        name="title"
        placeholder="Enter title here"
        />

        <label for="content">Content</label>
        <input 
        class="input-content"
        type="text"
        name="content"
        />
        <button
        type="submit"
        >Add Post</button>
    </form>
    </div>